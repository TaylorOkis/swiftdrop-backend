generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id             String      @id @default(uuid())
  name           String      @unique
  email          String      @unique
  address        String
  color          String[] 
  logo           String?  
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  employees      Employee[]  
}

model Employee {
  id          String          @id  @default(uuid())
  username    String?
  password    String      
  firstname   String
  middlename  String?
  lastname    String
  email       String
  phone       String
  company_id  String      
  role        Role        
  status      EmployeeStatus  @default(ACTIVE)
  image       String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  company     Company         @relation(fields: [company_id], references: [id])
}

enum Role {
  ADMIN
  DRIVER
  DISPATCHER
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}
